---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";

const title = "Contact";
const email = "chad@chadslab.net";
---

<Layout title="Contact">
    <Section>
        <h1>{title}</h1>
        <p>You can contact me at <a href={`mailto:${email}`}>{email}</a></p>
        <img src="/images/proshot.jpeg" alt="Profile Picture" />
    </Section>
</Layout>

<style>
    img {
        border-radius: 50%;
    }
</style>
