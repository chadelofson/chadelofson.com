---
import Section from "./Section.astro";
import ButtonLink from "./ButtonLink.astro";
---

<Section>
    <header id="header">
        <div class="content">
            <h1>
                <span>Hi, I am Chad.</span>
                <span><span class="accent">Full-stack</span> Developer</span>
            </h1>
            <p class="description">
                Iâ€™m a Full-Stack Developer specializing in React.js, Next.js,
                Node.js, and database management. I build scalable,
                high-performance web applications, robust back-end architecture,
                and efficient API integrations.
            </p>
            <div class="button-container">
                <ButtonLink
                    href="/projects"
                    text="View Projects"
                    variant="secondary"
                />
                <ButtonLink
                    href="/resume.pdf"
                    text="Download resume"
                    isDownload={true}
                />
            </div>
        </div>
        <img src="/images/proshot.jpeg" alt="Chad Elofson Profile Picture" />
    </header>
</Section>

<style>
    #header {
        display: grid;
        grid-template-columns: 540px 1fr;
        justify-items: center;
        gap: 80px;
        align-items: center;

        h1 {
            font-size: 44px;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;

            .accent {
                color: var(--primary);
            }
        }

        .button-container {
            display: flex;
            gap: 10px;
        }

        .description {
            line-height: 28px;
            color: var(--dark);
            margin-bottom: 30px;
        }

        img {
            border-radius: 50%;
        }

        @media (max-width: 1000px) {
            & {
                grid-template-columns: 1fr;
                grid-template-rows: auto;
                gap: 40px;
            }

            img {
                grid-row: 1;
            }
        }

        @media (max-width: 600px) {
            .button-container {
                flex-direction: column;
            }
        }
    }
</style>
